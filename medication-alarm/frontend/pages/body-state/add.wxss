.container {
  padding: 20px;
}
.form-group {
  margin-bottom: 20px;
}
.label {
  font-size: 16px;
  color: #333;
  margin-bottom: 10px;
  font-weight: bold;
}
.picker, .input {
  background: #f5f5f5;
  padding: 10px;
  border-radius: 8px;
  font-size: 16px;
}
.input-area {
  background: #f5f5f5;
  padding: 10px;
  border-radius: 8px;
  width: 100%;
  height: 100px;
  box-sizing: border-box;
  font-size: 16px;
}
.submit-btn {
  background: #007AFF;
  color: white;
  margin-top: 30px;
}

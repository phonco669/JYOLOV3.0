@import "guide.wxss";

/**index.wxss**/
.header-section {
  padding: 20rpx 10rpx 40rpx;
}

.user-profile, .login-placeholder {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  border: 4rpx solid var(--white);
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.avatar-circle {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #E0E6ED;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
  color: #7F8C8D;
  font-size: 24rpx;
}

.greeting {
  display: flex;
  flex-direction: column;
}

.h1 {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--text-main);
  margin-bottom: 8rpx;
}

.p {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.dashboard {
  background: linear-gradient(135deg, #ffffff 0%, #f9fbfd 100%);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-main);
}

.date-badge {
  background: var(--primary-light);
  color: var(--primary-color);
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.stats-row {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 10rpx 0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-val {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--text-main);
  margin-bottom: 10rpx;
}

.stat-val.success {
  color: var(--primary-color);
}

.stat-key {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: #E0E6ED;
}

/* Schedule List Styles */
.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-main);
  margin: 40rpx 20rpx 20rpx;
}

.schedule-list {
  padding: 0 20rpx;
}

.empty-state {
  text-align: center;
  padding: 40rpx;
  color: var(--text-secondary);
  font-size: 28rpx;
}

.schedule-item {
  display: flex;
  margin-bottom: 30rpx;
}

.time-col {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100rpx;
  margin-right: 20rpx;
}

.time-text {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-main);
  margin-bottom: 10rpx;
}

.time-line {
  width: 2rpx;
  flex: 1;
  background: #E0E6ED;
}

.med-card {
  flex: 1;
  background: var(--white);
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
}

.med-card.done {
  opacity: 0.7;
  background: #F8FAFC;
}

.med-info {
  display: flex;
  flex-direction: column;
}

.med-name {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.med-dose {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.btn-take {
  font-size: 28rpx;
  font-weight: 500;
  background: var(--primary-color);
  color: #fff;
  border-radius: 40rpx;
  padding: 10rpx 30rpx;
  min-width: 120rpx;
  margin: 0;
  line-height: 1.5;
}

.btn-take.taken {
  background: #E0E6ED;
  color: #9CA3AF;
}

.action-grid {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.action-card {
  background: var(--white);
  padding: 30rpx;
  border-radius: var(--radius);
  box-shadow: var(--shadow);
  display: flex;
  align-items: center;
  transition: transform 0.1s;
}

.action-card:active {
  transform: scale(0.99);
}

.icon-box {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 30rpx;
}

.icon-box.blue {
  background: #E3F2FD;
  color: #2196F3;
}

.icon-box.green {
  background: #E8F5E9;
  color: #4CAF50;
}

.action-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.action-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-main);
  margin-bottom: 6rpx;
}

.action-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.arrow {
  color: #CBD5E0;
  font-size: 32rpx;
}


@import "guide.wxss";

/**index.wxss**/
.header-section {
  padding: 20rpx 10rpx 40rpx;
}

.user-profile, .login-placeholder {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  border: 4rpx solid var(--white);
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.avatar-circle {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #E0E6ED;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
  color: #7F8C8D;
  font-size: 24rpx;
}

.greeting {
  display: flex;
  flex-direction: column;
}

.h1 {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--text-main);
  margin-bottom: 8rpx;
}

.p {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.dashboard {
  background: linear-gradient(135deg, #ffffff 0%, #f9fbfd 100%);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-main);
}

.date-badge {
  background: var(--primary-light);
  color: var(--primary-color);
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.stats-row {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 10rpx 0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-val {
  font-size: 48rpx;
  font-weight: bold;
  color: var(--text-main);
  margin-bottom: 10rpx;
}

.stat-val.success {
  color: var(--primary-color);
}

.stat-key {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: #EEE;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-main);
  margin: 40rpx 10rpx 20rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid var(--primary-color);
}

.schedule-list {
  padding-bottom: 20rpx;
}

.schedule-item {
  display: flex;
  margin-bottom: 30rpx;
  position: relative;
}

.time-col {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100rpx;
  margin-right: 20rpx;
  padding-top: 10rpx;
}

.time-text {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-main);
  margin-bottom: 10rpx;
}

.time-text.overdue {
  color: #E74C3C;
}

.time-line {
  width: 2rpx;
  flex: 1;
  background: #E0E6ED;
  margin-top: 10rpx;
}

.med-card {
  flex: 1;
  background: var(--white);
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.04);
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

.med-card.done {
  background: #F8FAFC;
  box-shadow: none;
  border: 2rpx solid #E0E6ED;
}

.med-card.done .med-name {
  color: #BDC3C7 !important;
  text-decoration: line-through;
}

.med-card.overdue-card {
  border-left: 8rpx solid #E74C3C;
}

.med-info {
  display: flex;
  flex-direction: column;
}

.med-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.med-dose {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.overdue-badge {
  font-size: 20rpx;
  color: #E74C3C;
  background: #FDEDEC;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  margin-top: 10rpx;
  align-self: flex-start;
}

.btn-take {
  font-size: 26rpx;
  font-weight: 600;
  background: var(--primary-color);
  color: var(--white);
  padding: 12rpx 36rpx;
  border-radius: 40rpx;
  border: none;
  box-shadow: 0 4rpx 10rpx rgba(26, 188, 156, 0.3);
}

.btn-take.taken {
  background: transparent;
  color: var(--primary-color);
  box-shadow: none;
  padding: 0;
}

.btn-take.btn-overdue {
  background: #E74C3C;
  box-shadow: 0 4rpx 10rpx rgba(231, 76, 60, 0.3);
}

.empty-state {
  text-align: center;
  padding: 60rpx 0;
  color: var(--text-secondary);
  font-size: 28rpx;
}

.action-grid {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  margin-top: 20rpx;
}

.action-card {
  background: var(--white);
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
}

.icon-box {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 20rpx;
}

.icon-box.blue { background: #EBF5FB; color: #3498DB; }
.icon-box.orange { background: #FEF5E7; color: #F39C12; }

.action-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.action-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-main);
  margin-bottom: 4rpx;
}

.action-desc {
  font-size: 22rpx;
  color: var(--text-secondary);
}

.arrow {
  color: #BDC3C7;
  font-size: 24rpx;
}

/* Warnings */
.warning-title {
    border-left-color: #F59E0B;
}

.warning-list {
    margin-bottom: 30rpx;
}

.warning-item {
    background: #FEF3C7;
    border-radius: 16rpx;
    padding: 24rpx;
    margin-bottom: 16rpx;
    display: flex;
    align-items: center;
    border: 1rpx solid #FCD34D;
}

.warning-icon {
    font-size: 32rpx;
    margin-right: 16rpx;
}

.warning-text {
    font-size: 26rpx;
    color: #92400E;
    flex: 1;
}

/* Follow-ups */
.followup-list {
    margin-bottom: 30rpx;
}

.followup-item {
    background: #E0F2FE;
    border-radius: 16rpx;
    padding: 24rpx;
    margin-bottom: 16rpx;
    display: flex;
    align-items: center;
    border: 1rpx solid #BAE6FD;
}

.followup-icon {
    font-size: 32rpx;
    margin-right: 20rpx;
}

.followup-content {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.followup-title {
    font-size: 28rpx;
    font-weight: 600;
    color: #0369A1;
    margin-bottom: 4rpx;
}

.followup-time {
    font-size: 24rpx;
    color: #0C4A6E;
    margin-bottom: 4rpx;
}

.followup-loc {
    font-size: 22rpx;
    color: #0C4A6E;
    opacity: 0.8;
}

/* Todos */
.todo-list {
    margin-bottom: 30rpx;
}

.todo-item {
    background: var(--white);
    border-radius: 16rpx;
    padding: 24rpx;
    margin-bottom: 16rpx;
    display: flex;
    align-items: center;
    box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.03);
}

.todo-check {
    width: 32rpx;
    height: 32rpx;
    border: 3rpx solid #CBD5E1;
    border-radius: 50%;
    margin-right: 20rpx;
}

.todo-content {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.todo-title {
    font-size: 28rpx;
    color: var(--text-main);
}

.todo-desc {
    font-size: 22rpx;
    color: var(--text-secondary);
    margin-top: 4rpx;
}

/**list.wxss**/
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 0 10rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--text-main);
}

.add-btn-wrapper {
  background: var(--primary-light);
  color: var(--primary-color);
  padding: 12rpx 30rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
}

.add-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
  margin-top: -4rpx;
}

.list-container {
  padding-bottom: 40rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 100rpx;
}

.empty-icon-circle {
  width: 160rpx;
  height: 160rpx;
  background: #F0F4F8;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 64rpx;
  margin-bottom: 40rpx;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-main);
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 60rpx;
}

.mt-40 {
  margin-top: 40rpx;
  width: 60%;
}

.med-card {
  background: var(--white);
  border-radius: var(--radius);
  box-shadow: var(--shadow);
  margin-bottom: 30rpx;
  overflow: hidden;
  display: flex;
  position: relative;
}

.med-color-strip {
  width: 12rpx;
  background-color: var(--primary-color);
}

.med-content {
  flex: 1;
  padding: 30rpx 30rpx 30rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.med-main {
  display: flex;
  flex-direction: column;
}

.med-name {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--text-main);
  margin-bottom: 8rpx;
}

.med-dosage {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.med-stock-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  background: #F8FAFC;
  padding: 10rpx 20rpx;
  border-radius: 12rpx;
}

.stock-label {
  font-size: 22rpx;
  color: var(--text-secondary);
  margin-bottom: 4rpx;
}

.stock-num {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-main);
}

.stock-num.warning {
  color: #FF9800;
}

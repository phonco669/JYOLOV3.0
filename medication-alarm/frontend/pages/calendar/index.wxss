.calendar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 40rpx;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.current-month {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-main);
}

.month-btn {
  padding: 10rpx 20rpx;
  color: var(--primary-color);
  font-size: 32rpx;
}

.weekday-header {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  color: var(--text-secondary);
  font-size: 24rpx;
}

.calendar-grid {
  display: flex;
  flex-wrap: wrap;
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.day-cell {
  width: 14.28%; /* 100/7 */
  height: 90rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  margin-bottom: 10rpx;
  border-radius: 12rpx;
}

.day-cell.other-month {
  opacity: 0.3;
}

.day-cell.today {
  background: #E8F5E9;
  border: 2rpx solid var(--primary-color);
}

.day-num {
  font-size: 28rpx;
  color: var(--text-main);
}

/* Status Styles */
.status-dot {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  margin-top: 8rpx;
}

.day-cell.completed .status-dot { background: var(--primary-color); }
.day-cell.partial .status-dot { background: #FF9800; }
.day-cell.missed .status-dot { background: #F44336; }
.day-cell.pending .status-dot { background: #BDBDBD; }

/* Legend */
.legend {
  display: flex;
  justify-content: center;
  gap: 30rpx;
  margin: 30rpx 0;
}

.legend-item {
  display: flex;
  align-items: center;
}

.dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.dot.completed { background: var(--primary-color); }
.dot.partial { background: #FF9800; }
.dot.missed { background: #F44336; }
.dot.pending { background: #BDBDBD; }

.legend-item text {
  font-size: 22rpx;
  color: var(--text-secondary);
}

/* Day Details */
.day-details {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-top: 20rpx;
}

.detail-header {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.detail-item {
  display: flex;
  align-items: center;
  padding: 15rpx 0;
}

.detail-time {
  width: 100rpx;
  font-weight: bold;
  color: var(--text-main);
}

.detail-info {
  flex: 1;
  display: flex;
  justify-content: space-between;
}

.detail-name {
  font-size: 28rpx;
}

.detail-status {
  font-size: 24rpx;
}

.detail-status.taken { color: var(--primary-color); }
.detail-status.pending { color: var(--text-secondary); }
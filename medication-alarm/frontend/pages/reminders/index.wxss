/* pages/reminders/index.wxss */
.container {
  padding: 30rpx;
  background-color: #F8FAFC;
  min-height: 100vh;
}

.header {
  margin-bottom: 40rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 800;
  color: #1E293B;
  display: block;
  margin-bottom: 12rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #64748B;
  display: block;
}

/* Tabs */
.tabs {
  display: flex;
  background: white;
  padding: 8rpx;
  border-radius: 20rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #64748B;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  font-weight: 600;
}

.tab-item.active {
  background: #E0F2F1;
  color: #009688;
}

.reminder-list {
  height: calc(100vh - 340rpx);
}

.empty-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: #94A3B8;
  font-size: 28rpx;
}

.reminder-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.03);
  transition: all 0.2s;
}

.reminder-card:active {
  transform: scale(0.98);
}

.reminder-card.stock_low {
  border-left: 8rpx solid #FF9800;
}

.reminder-card.todo {
  border-left: 8rpx solid #2196F3;
}

.card-left {
  display: flex;
  align-items: flex-start;
  flex: 1;
}

.icon-box {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.icon-box.stock_low {
  background: #FFF3E0;
  color: #FF9800;
}

.icon-box.todo {
  background: #E3F2FD;
  color: #2196F3;
}

.content {
  display: flex;
  flex-direction: column;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #334155;
  margin-bottom: 8rpx;
}

.card-detail {
  font-size: 26rpx;
  color: #64748B;
  margin-bottom: 8rpx;
}

.card-time {
  font-size: 24rpx;
  color: #94A3B8;
}

.card-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.action-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F1F5F9;
  border-radius: 50%;
  font-size: 32rpx;
  color: #64748B;
  transition: all 0.2s;
}

.action-btn:active {
  background: #E2E8F0;
}

.action-btn.edit {
  color: #3B82F6;
  background: #EFF6FF;
}

.action-btn.undo {
  color: #F59E0B;
  background: #FFFBEB;
}

.priority-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
}

.priority-dot.high {
  background-color: #EF4444;
  box-shadow: 0 0 8rpx rgba(239, 68, 68, 0.4);
}

.fab {
  position: fixed;
  right: 40rpx;
  bottom: 60rpx;
  width: 110rpx;
  height: 110rpx;
  background: #009688;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 60rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 150, 136, 0.4);
  transition: transform 0.2s;
  z-index: 100;
}

.fab:active {
  transform: scale(0.9);
}

.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 200;
  backdrop-filter: blur(4px);
}

.modal-content {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 640rpx;
  background: white;
  border-radius: 32rpx;
  padding: 48rpx;
  z-index: 201;
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.15);
}

.modal-header {
  font-size: 40rpx;
  font-weight: 700;
  text-align: center;
  color: #2C3E50;
  margin-bottom: 48rpx;
  letter-spacing: 2rpx;
}

.form-group {
  margin-bottom: 32rpx;
}

.input, .textarea {
  background: #F8FAFC;
  padding: 0 24rpx;
  border-radius: 16rpx;
  width: 100%;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #334155;
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
}

.input {
  height: 96rpx;
  line-height: 96rpx;
}

.input:focus, .textarea:focus {
  background: #FFFFFF;
  border-color: #4CAF50;
  box-shadow: 0 0 0 4rpx rgba(76, 175, 80, 0.1);
}

.textarea {
  height: 200rpx;
  padding-top: 24rpx;
  padding-bottom: 24rpx;
  line-height: 1.5;
}

.form-row {
  display: flex;
  gap: 24rpx;
  margin-bottom: 48rpx;
}

.picker {
  background: #F8FAFC;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  text-align: center;
  color: #475569;
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
  font-weight: 500;
}

.picker:active {
  background: #F1F5F9;
}

.modal-actions {
  display: flex;
  gap: 24rpx;
  margin-top: 16rpx;
}

.btn {
  flex: 1;
  font-size: 32rpx;
  height: 96rpx;
  line-height: 96rpx;
  padding: 0;
  border-radius: 48rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: opacity 0.2s;
}

.btn:active {
  opacity: 0.9;
}

.btn.cancel {
  background: #F1F5F9;
  color: #64748B;
}

.btn.confirm {
  background: linear-gradient(135deg, #4CAF50 0%, #2E8B57 100%);
  color: white;
  box-shadow: 0 8rpx 20rpx rgba(76, 175, 80, 0.3);
}

/* pages/reminders/index.wxss */
page {
  --primary: #0D9488;
  --primary-light: #CCFBF1;
  --text-main: #1E293B;
  --text-sub: #64748B;
  --bg-page: #F8FAFC;
  --white: #FFFFFF;
  
  --shadow-sm: 0 1rpx 2rpx 0 rgba(0, 0, 0, 0.05);
  --shadow-md: 0 4rpx 6rpx -1rpx rgba(0, 0, 0, 0.1), 0 2rpx 4rpx -1rpx rgba(0, 0, 0, 0.06);
  --shadow-lg: 0 10rpx 15rpx -3rpx rgba(0, 0, 0, 0.1), 0 4rpx 6rpx -2rpx rgba(0, 0, 0, 0.05);

  --stock-color: #F59E0B;
  --todo-color: #3B82F6;
  --followup-color: #8B5CF6;
  --missed-color: #EF4444;
  --default-med-color: #14B8A6;
}

.container {
  padding: 0;
  background-color: var(--bg-page);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.header {
  padding: 40rpx 40rpx 20rpx;
  background: var(--white);
  position: relative;
  overflow: hidden;
}

.header-content {
  position: relative;
  z-index: 2;
}

.title {
  font-size: 56rpx;
  font-weight: 900;
  color: var(--text-main);
  display: block;
  letter-spacing: -1.5rpx;
  line-height: 1.1;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 28rpx;
  color: var(--text-sub);
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

/* Tabs */
.tabs {
  background: var(--white);
  padding: 10rpx 40rpx 30rpx;
  position: sticky;
  top: 0;
  z-index: 10;
  border-bottom: 1rpx solid #F1F5F9;
}

.tab-track {
  background: #F1F5F9;
  border-radius: 100rpx;
  padding: 8rpx;
  display: flex;
  position: relative;
  height: 88rpx;
  box-sizing: border-box;
}

.tab-indicator {
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  width: calc(50% - 8rpx);
  height: calc(100% - 16rpx);
  background: var(--white);
  border-radius: 100rpx;
  box-shadow: var(--shadow-sm);
  transition: transform 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
  z-index: 1;
}

.tab-item {
  flex: 1;
  text-align: center;
  position: relative;
  z-index: 2;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-sub);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: color 0.3s;
}

.tab-item.active {
  color: var(--text-main);
}

/* List */
.reminder-list {
  flex: 1;
  padding: 24rpx 32rpx;
  box-sizing: border-box;
  height: 0; /* Important for flex-grow scrolling */
}

.list-padding {
  height: 120rpx;
}

.section-divider {
  padding: 30rpx 0 10rpx;
  font-size: 28rpx;
  color: #94A3B8;
  font-weight: 500;
  display: flex;
  align-items: center;
}

.section-divider::before {
  content: '';
  flex: 1;
  height: 1px;
  background: #E2E8F0;
  margin-right: 20rpx;
}

.section-divider::after {
  content: '';
  flex: 1;
  height: 1px;
  background: #E2E8F0;
  margin-left: 20rpx;
}

.reminder-card.future {
  opacity: 0.8;
  border-left: 4rpx solid #8B5CF6;
}

.time-badge.future {
  background: #F3E8FF;
  color: #8B5CF6;
}

/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  opacity: 0.6;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  filter: grayscale(1);
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-sub);
  font-weight: 500;
}

/* Card */
.reminder-card {
  background: var(--white);
  border-radius: 32rpx;
  margin-bottom: 24rpx;
  position: relative;
  overflow: hidden;
  box-shadow: var(--shadow-sm);
  display: flex;
  justify-content: space-between;
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  
  /* Dynamic color defaults */
  --accent-color: var(--default-med-color);
}

/* Type-specific defaults when no custom color provided */
.reminder-card.stock_low { --accent-color: var(--stock-color); }
.reminder-card.todo { --accent-color: var(--todo-color); }
.reminder-card.follow_up { --accent-color: var(--followup-color); }
.reminder-card.medication_missed { --accent-color: var(--missed-color); }

.reminder-card:active {
  transform: scale(0.98);
  box-shadow: none;
  background: #F8FAFC;
}

.reminder-card.completed {
  opacity: 0.7;
  filter: grayscale(0.8);
}

.card-indicator {
  width: 12rpx;
  background: var(--accent-color);
  opacity: 0.8;
}

.card-body {
  flex: 1;
  padding: 32rpx 24rpx 32rpx 24rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.card-main {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
}

.icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: 24rpx;
  background: var(--accent-color);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: white;
  flex-shrink: 0;
  opacity: 0.9;
  box-shadow: 0 4rpx 12rpx -2rpx var(--accent-color);
}

/* Make icon bg lighter for better contrast if needed, or keep filled */
/* Alternative: light bg with colored icon */
/* .icon-wrapper { background: color-mix(in srgb, var(--accent-color), white 85%); color: var(--accent-color); box-shadow: none; } */
/* Using css-variables for opacity-mix is hard in pure WXSS without preprocessor, staying with filled for now */

.text-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.title-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
  flex-wrap: wrap;
}

.card-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-main);
  line-height: 1.3;
}

.priority-tag {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 100rpx;
  background: #FEE2E2;
  color: #EF4444;
  font-weight: 700;
}

.card-detail {
  font-size: 26rpx;
  color: var(--text-sub);
  line-height: 1.4;
}

.card-footer {
  padding-left: 104rpx; /* Align with text (80icon + 24gap) */
}

.time-badge {
  display: inline-flex;
  align-items: center;
  background: #F1F5F9;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: var(--text-sub);
  font-weight: 600;
  gap: 8rpx;
}

.time-icon {
  font-size: 24rpx;
}

/* Actions */
.card-actions {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-right: 24rpx;
  gap: 16rpx;
}

.action-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
  background: #F1F5F9;
  color: var(--text-sub);
}

.action-btn.done {
  background: #ECFDF5;
  color: #059669;
}

.action-btn.undo {
  background: #FFF7ED;
  color: #EA580C;
}

.action-btn.edit {
  background: #EFF6FF;
  color: #2563EB;
}

.btn-icon {
  font-size: 32rpx;
  font-weight: bold;
}

/* FAB */
.fab-container {
  position: absolute;
  bottom: 60rpx;
  right: 40rpx;
  z-index: 20;
}

.fab {
  width: 112rpx;
  height: 112rpx;
  background: var(--text-main);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 30rpx rgba(30, 41, 59, 0.3);
  transition: transform 0.2s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.fab:active {
  transform: scale(0.9);
}

.fab-icon {
  color: white;
  font-size: 64rpx;
  font-weight: 300;
  line-height: 1;
  margin-top: -8rpx; /* Visual center adjustment */
}

/* Modal */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.4);
  backdrop-filter: blur(4px);
  z-index: 100;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s;
}

.modal-mask.visible {
  opacity: 1;
  pointer-events: auto;
}

.modal-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: var(--white);
  border-radius: 40rpx 40rpx 0 0;
  z-index: 101;
  transform: translateY(100%);
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  padding-bottom: env(safe-area-inset-bottom);
}

.modal-container.visible {
  transform: translateY(0);
}

.modal-header {
  padding: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 36rpx;
  font-weight: 800;
  color: var(--text-main);
}

.close-btn {
  font-size: 48rpx;
  color: var(--text-sub);
  padding: 10rpx;
  line-height: 0.5;
}

.modal-body {
  padding: 0 40rpx 40rpx;
}

.form-group {
  margin-bottom: 32rpx;
}

.form-group.half {
  flex: 1;
}

.form-row {
  display: flex;
  gap: 24rpx;
}

.label {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: var(--text-sub);
  margin-bottom: 16rpx;
}

.input, .textarea, .picker-box {
  background: #F8FAFC;
  padding: 24rpx 32rpx;
  border-radius: 24rpx;
  font-size: 30rpx;
  color: var(--text-main);
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.input:focus, .textarea:focus {
  background: var(--white);
  border-color: var(--primary);
  box-shadow: 0 0 0 4rpx var(--primary-light);
}

.textarea {
  height: 160rpx;
  width: 100%;
  box-sizing: border-box;
}

.modal-footer {
  padding: 20rpx 40rpx 60rpx;
  display: flex;
  gap: 24rpx;
}

.btn-cancel, .btn-confirm {
  flex: 1;
  height: 96rpx;
  border-radius: 28rpx;
  font-size: 32rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.btn-cancel {
  background: #F1F5F9;
  color: var(--text-sub);
}

.btn-confirm {
  background: var(--text-main);
  color: var(--white);
}

/* Type Switcher in Modal */
.type-switcher {
  display: flex;
  background: #F1F5F9;
  padding: 8rpx;
  border-radius: 20rpx;
  margin-bottom: 32rpx;
}

.type-btn {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-sub);
  border-radius: 16rpx;
  transition: all 0.2s ease;
}

.type-btn.active {
  background: var(--white);
  color: var(--primary);
  box-shadow: var(--shadow-sm);
}
